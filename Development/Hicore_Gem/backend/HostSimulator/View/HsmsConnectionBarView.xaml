<UserControl x:Class="HostSimulator.View.HsmsConnectionBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HostSimulator.View"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800">
    <Grid Margin="5" Background="White" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Button Content="HiCoreGem"  FontSize="20" Margin="5" Background="White" Foreground="Blue" />
        <Button Content="Host Simulator" Grid.Column="1"  FontSize="20" Margin="5" Background="White" FontWeight="Bold" />
        
        <Border Grid.Column="2" Margin="5" BorderThickness="1" BorderBrush="Black">
        <Grid   >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="28"/>
                    <RowDefinition Height="28"/>
            </Grid.RowDefinitions>
            <TextBlock Text="IP Address" Margin="3"/>

            <TextBlock Grid.Row="2" Text="Port" Margin="3"/>
            <TextBox Grid.Column="2"  Text="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}" Margin="3" />
            <TextBox Grid.Row="1" Grid.Column="2"  Text="{Binding PortNumber, UpdateSourceTrigger=PropertyChanged}" Margin="3"/>
        </Grid>
        </Border>
        <Button Content="Connect" Grid.Column="3" Command="{Binding ConnectCommand}"  Margin="3" />
        <Button Content="DisConnect" Grid.Column="4" Command="{Binding DisConnectCommand }"  Margin="3" />

        <Button Content="Config" Grid.Column="5" Command="{Binding ConfigCommand}"  Margin="3" />
    </Grid>
</UserControl>
