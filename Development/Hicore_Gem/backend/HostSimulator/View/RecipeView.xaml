<UserControl x:Class="HostSimulator.View.RecipeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HostSimulator.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="150"/>

            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>

        </Grid.RowDefinitions>
        <Button Grid.ColumnSpan="4" Margin="5">Recipe Commands </Button>

        <TextBlock Text="PP ID" Grid.Row="1" Foreground="Red" Margin="5" />
        <TextBox Grid.Column="1" Grid.Row="1" Margin="5"></TextBox>
        <TextBox Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="6" Margin="5"></TextBox>

        <CheckBox Grid.Row="1" Grid.Column="2"  Width="100" Margin="15">UnFormatted</CheckBox>

        <Button Grid.Row="2" Grid.Column="2"  Width="100" Margin="5">Download Recipe</Button>
        <Button Grid.Row="3" Grid.Column="2" Width="100" Margin="5">Upload Recipe</Button>
        <Button Grid.Row="4" Grid.Column="2" Width="100" Margin="5">Verify Recipe</Button>
        <Button Grid.Row="5" Grid.Column="2" Width="100" Margin="5">Delete Recipe</Button>

        <Button Grid.Row="6" Grid.Column="2" Width="100" Margin="5">PP Select Recipe</Button>
        <Button Grid.Row="6" Grid.Column="2" Width="100" Margin="5">PP Select Recipe</Button>

        <Button Grid.Row="7" Grid.Column="2" Width="100" Margin="5">PP Stop </Button>

        <Button Grid.Row="8" Grid.Column="2" Width="100" Margin="5">PP Abort</Button>

        <Button Grid.Row="9" Grid.Column="2" Width="100" Margin="5">PP Resume</Button>

        
    </Grid>
</UserControl>
