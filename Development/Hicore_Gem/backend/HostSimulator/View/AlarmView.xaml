<UserControl x:Class="HostSimulator.View.AlarmView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HostSimulator.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Title -->
        <TextBlock Text="Alarm Screen" FontSize="24"
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>

        <!-- Alarm Table -->
        <ListView x:Name="AlarmListView" ItemsSource="{Binding Alarms}" 
              Margin="10,50,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Alarm ID" DisplayMemberBinding="{Binding AlarmID}" Width="80"/>
                    <GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}" Width="250"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="100"/>
                    <GridViewColumn Header="Acknowledge" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Acknowledge" Width="100" Height="30" 
                                     
                                    Command="{Binding DataContext.AcknowledgeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                    CommandParameter="{Binding AlarmID}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <!-- Hide Button if Status is "Acknowledged" -->
                                                <DataTrigger Binding="{Binding Status}" Value="Acknowledged">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

            <!-- Row Blinking Effect for Errors -->
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="Error">
                            <Setter Property="Background" Value="Red"/>
                            <Setter Property="Opacity" Value="1.0"/>
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                     From="1.0" To="0.3" Duration="0:0:0.5"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</UserControl>
