<Window x:Class="HostSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HostSimulator"
        mc:Ignorable="d"
        Title="HiCore Host Simulator" Height="800" Width="1300"  Icon="{x:Null}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Top Bar -->
            <RowDefinition Height="*"/>
            <!-- Main area -->
            <RowDefinition Height="30"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <!-- Left Nav -->
            <ColumnDefinition Width="*"/>
            <!-- Page -->
        </Grid.ColumnDefinitions>

        <!-- Top Bar -->
        <ContentControl Grid.Row="0" Grid.ColumnSpan="2" Margin="3"
                    Content="{Binding hsmsConnectionBarViewModel}" />

        <!-- Left Navigation Menu -->
        <ContentControl Grid.Row="1" Grid.Column="0"
                    Content="{Binding NavigationViewModel}" />

        <!-- Main Page Screen -->
        <ContentControl Grid.Row="1" Grid.Column="1"
                    Content="{Binding CurrentPageViewModel}" />

        <!-- Footer -->
        <ContentControl Grid.Row="2" Grid.ColumnSpan="2"
                    Content="{Binding FooterPageViewModel}" />
    </Grid>
</Window>
