<UserControl x:Class="EquipmentSimulator.View.RemoteCommandView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EquipmentSimulator.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!-- ============================= -->
        <!-- HOST COMMAND HISTORY TABLE   -->
        <!-- ============================= -->
        <GroupBox Header="Host Remote Command History" Margin="0,0,0,10">
            <DataGrid ItemsSource="{Binding Commands}"
                      SelectedItem="{Binding SelectedCommand}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">

                <!-- Highlight failed commands -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Hcack}" Value="0">
                                <Setter Property="Background" Value="LightGreen"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Hcack}" Value="1">
                                <Setter Property="Background" Value="LightCoral"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Hcack}" Value="2">
                                <Setter Property="Background" Value="Orange"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Time"
                                        Binding="{Binding Time}"
                                        Width="160"/>
                    <DataGridTextColumn Header="RCMD"
                                        Binding="{Binding CommandName}"
                                        Width="120"/>
                    <DataGridTextColumn Header="Source"
                                        Binding="{Binding Source}"
                                        Width="80"/>
                    <DataGridTextColumn Header="HCACK"
                                        Binding="{Binding Hcack}"
                                        Width="80"/>
                    <DataGridTextColumn Header="Result"
                                        Binding="{Binding ResultMessage}"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- ============================= -->
        <!-- SELECTED COMMAND DETAILS     -->
        <!-- ============================= -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Command Info -->
            <GroupBox Header="Command Details" Margin="0,0,10,0">
                <StackPanel Margin="10">
                    <TextBlock Text="RCMD:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedCommand.CommandName}" Margin="0,0,0,8"/>

                    <TextBlock Text="Source:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedCommand.Source}" Margin="0,0,0,8"/>

                    <TextBlock Text="Time:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedCommand.Time}" Margin="0,0,0,8"/>

                    <TextBlock Text="HCACK:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedCommand.Hcack}" Margin="0,0,0,8"/>

                    <TextBlock Text="Result Message:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedCommand.ResultMessage}"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </GroupBox>

            <!-- Parameters -->
            <GroupBox Header="Command Parameters" Grid.Column="1">
                <DataGrid ItemsSource="{Binding SelectedCommand.Parameters}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="CPNAME"
                                            Binding="{Binding Name}"
                                            Width="150"/>
                        <DataGridTextColumn Header="TYPE"
                                            Binding="{Binding Type}"
                                            Width="80"/>
                        <DataGridTextColumn Header="VALUE"
                                            Binding="{Binding Value}"
                                            Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
