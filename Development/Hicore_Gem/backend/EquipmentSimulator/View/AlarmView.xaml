<UserControl x:Class="EquipmentSimulator.View.AlarmView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EquipmentSimulator.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Title -->
        <TextBlock Text="Alarm Screen"
           FontSize="24"
           HorizontalAlignment="Center"
           VerticalAlignment="Top"
           Margin="10"/>

        <DataGrid ItemsSource="{Binding Alarms}"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          GridLinesVisibility="All">

            <DataGrid.Columns>

                <DataGridTextColumn Header="Alarm ID"
                            Binding="{Binding AlarmId}"
                            IsReadOnly="True"/>

                <DataGridTextColumn Header="Description"
                            Binding="{Binding Description}"
                            IsReadOnly="True"
                            Width="*"/>

                <DataGridTextColumn Header="State"
                            Binding="{Binding State}"
                            IsReadOnly="True"/>

                <DataGridTextColumn Header="Last Changed (UTC)"
                            Binding="{Binding LastChangedUtc}"
                            IsReadOnly="True"/>

                <!-- 🔴 ACTION COLUMN -->
                <DataGridTemplateColumn Header="Action" Width="180">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">

                                <!-- FIRE -->
                                <Button Content="Fire"
                                Command="{Binding FireCommand}"
                                IsEnabled="{Binding CanFire}"
                                Margin="5"/>

                                <!-- CLEAR -->
                                <Button Content="Clear"
                                Command="{Binding ClearCommand}"
                                IsEnabled="{Binding CanClear}"
                                Margin="5"/>

                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
