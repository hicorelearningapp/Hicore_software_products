    <UserControl x:Class="EquipmentSimulator.View.RecipeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500"
             d:DesignWidth="900">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <Border Padding="10"
                Background="#1E293B"
                CornerRadius="6">
            <StackPanel>
                <TextBlock Text="Recipe Management"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="White"/>
                <TextBlock Text="200mm Equipment | Operator Recipe Editor"
                           FontSize="12"
                           Foreground="#CBD5E1"/>
            </StackPanel>
        </Border>

        <!-- ================= BODY ================= -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ===== LEFT: RECIPE LIST ===== -->
            <GroupBox Header="Recipes"
                      Grid.Column="0"
                      Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="60"/>

                    </Grid.RowDefinitions>
                    <!-- List -->
                    <ListBox ItemsSource="{Binding Recipes}"
                             SelectedItem="{Binding SelectedRecipe}"
                             DisplayMemberPath="RecipeId"
                             Margin="6"/>

                    <!-- Actions -->
                    <StackPanel DockPanel.Dock="Bottom"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="6" Grid.Row="1">
                        <Button Content="Select"
                                Width="80"
                                Margin="4"
                                Command="{Binding SelectCommand}"/>

                        <Button Content="Delete"
                                Width="80"
                                Margin="4"
                                Command="{Binding DeleteCommand}"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- ===== RIGHT: RECIPE CONTENT ===== -->
            <GroupBox Header="Recipe Content"
                      Grid.Column="1">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Selected Recipe -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,6">
                        <TextBlock Text="Selected PPID:"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding SelectedRecipe.RecipeId}"
                                   Margin="6,0,0,0"/>
                    </StackPanel>

                    <!-- Text Editor -->
                    <TextBox Grid.Row="1"
                             Text="{Binding RecipeText,
                                            UpdateSourceTrigger=PropertyChanged}"
                             FontFamily="Consolas"
                             FontSize="13"
                             AcceptsReturn="True"
                             AcceptsTab="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             IsReadOnly="{Binding IsReadOnlyMode}"/>

                    <!-- Edit Controls -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,8,0,0">
                        <Button Content="Edit"
                                Width="80"
                                Margin="4"
                                Command="{Binding EditCommand}"/>

                        <Button Content="Save"
                                Width="80"
                                Margin="4"
                                Command="{Binding SaveCommand}"/>

                        <Button Content="Cancel"
                                Width="80"
                                Margin="4"
                                Command="{Binding CancelCommand}"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
    </UserControl>
