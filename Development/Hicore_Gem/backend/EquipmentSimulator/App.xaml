<Application x:Class="EquipmentSimulator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EquipmentSimulator"
             xmlns:View="clr-namespace:EquipmentSimulator.View" 
             xmlns:ViewModel="clr-namespace:EquipmentSimulator.ViewModel"
             >
    <Application.Resources>
        <DataTemplate DataType="{x:Type ViewModel:HsmsConnectionBarViewModel}">
            <View:HsmsConnectionBarView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type ViewModel:HomeViewModel}">
            <View:HomeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type ViewModel:MessageViewModel}">
            <View:MessageView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type ViewModel:FooterViewModel}">
            <View:FooterView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type ViewModel:AlarmStatusViewModel}">
            <View:AlarmView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModel:NavigationMenuViewModel}">
            <View:NavigationMenuView/>
        </DataTemplate>
       <DataTemplate DataType="{x:Type ViewModel:VariableViewModel}">
            <View:VariableView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type ViewModel:ReportViewModel}">
            <View:ReportView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type ViewModel:TraceBrowserViewModel}">
            <View:TraceDataView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type ViewModel:RemoteCommandViewModel}">
            <View:RemoteCommandView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type ViewModel:RecipeViewModel}">
            <View:RecipeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModel:SettingViewModel}">
            <View:SettingView/>
        </DataTemplate>


        <DataTemplate DataType="{x:Type ViewModel:TerminalMessageViewModel}">
            <View:TerminalMessageView/>
        </DataTemplate>




    </Application.Resources>
</Application>
